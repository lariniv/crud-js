Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main class='main'>
  <section>
    <div class='form'>
      <h1 class='form__title'>Product edit</h1>
      <form method='POST' action='/product-edit'>
        <div class='form__content'>
          <h2 class='form__inner-title'>Information about
            product</h2>
          <div class='form__field form__field-small'>
            <label for='name' class='form__label'>Product
              name</label>
            <input
              type='name'
              name='name'
              class='form__input'
              value='{{data.name}}'
            />
          </div>
          <div class='form__field form__field-small'>
            <label
              for='price'
              class='form__label'
            >Price</label>
            <input
              type='price'
              name='price'
              class='form__input'
              value='{{data.price}}'
            />
          </div>
          <div class='form__field form__field-small'>
            <label for='id' class='form__label'>Id</label>
            <input
              type='id'
              name='id'
              class='form__input'
              value='{{data.id}}'
            />
          </div>
          <div class='form__field'>
            <label
              for='desciption'
              class='form__label'
            >Short description</label>
            <input
              type='description'
              name='description'
              class='form__input'
              value='{{data.description}}'
            />
            <div class='form__warning'>This will apear on
              the product card</div>
          </div>
          <div class='form__buttons'>
            <button class='form__button'>Edit product</button>
            <a
              class='form__button form__button-warning'
              href='/product-delete?id={{data.id}}'
            >Delete product</a>
          </div>
        </div>
      </form>
    </div>
  </section>
</main>

