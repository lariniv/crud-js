<main class='main'>
  <section>
    <div class='form'>
      <h1 class='form__title'>Product creation</h1>
      <form method='POST' action='/product-create'>
        <div class='form__content'>
          <h2 class='form__inner-title'>Information about
            product</h2>
          <div class='form__field form__field-small'>
            <label for='name' class='form__label'>Product
              name</label>
            <input
              type='name'
              name='name'
              class='form__input'
            />
          </div>
          <div class='form__field form__field-small'>
            <label
              for='price'
              class='form__label'
            >Price</label>
            <input
              type='price'
              name='price'
              class='form__input'
            />
          </div>
          <div class='form__field'>
            <label
              for='desciption'
              class='form__label'
            >Short description</label>
            <input
              type='description'
              name='description'
              class='form__input'
            />
            <div class='form__warning'>This will apear on
              the product card</div>
          </div>
          <button class='form__button'>Create product</button>
        </div>
      </form>
    </div>
  </section>
</main>

